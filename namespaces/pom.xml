<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <parent>
    <groupId>org.immutant</groupId>
    <artifactId>immutant-parent</artifactId>
    <version>1.1.4-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <artifactId>immutant-namespaces-parent</artifactId>
  <packaging>pom</packaging>
  <name>Immutant Namespaces Parent</name>

  <modules>
    <module>cache</module>
    <module>common</module>
    <module>daemons</module>
    <module>immutant</module>
    <module>jobs</module>
    <module>messaging</module>
    <module>web</module>
    <module>xa</module>
  </modules>

  <dependencies>
    <dependency>
      <groupId>org.immutant</groupId>
      <artifactId>immutant-build-support</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <profiles>
    <profile>
      <id>in-ns</id>
      <activation>
        <file>
          <exists>../../namespaces/pom.xml</exists>
        </file>
      </activation>
      <build>
        <pluginManagement>
          <plugins>
            <plugin>
              <groupId>com.theoryinpractise</groupId>
              <artifactId>clojure-maven-plugin</artifactId>
              <configuration>
                <testScript>../../support/clojure-test-support/src/main/clojure/immutant/test/runner.clj</testScript>
              </configuration>
              <executions>
                <execution>
                  <id>test</id>
                  <phase>test</phase>
                  <goals>
                    <goal>test</goal>
                  </goals>
                </execution>

                <execution>
                  <id>generate-clojars-project</id>
                  <phase>package</phase>
                  <goals>
                    <goal>run</goal>
                  </goals>
                  <configuration>
                    <mainClass>immutant.build.generate_clojars_project</mainClass>
                  </configuration>
                </execution>

                <execution>
                  <id>codox</id>
                  <phase>package</phase>
                  <goals>
                    <goal>run</goal>
                  </goals>
                  <configuration>
                  <mainClass>immutant.build.generate_codox_index</mainClass>
                  </configuration>
                </execution>
              </executions>
            </plugin>

            <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-install-plugin</artifactId>
              <executions>
                <execution>
                  <id>install-ns-artifact-locally</id>
                  <phase>install</phase>
                  <goals>
                    <goal>install-file</goal>
                  </goals>
                  <configuration>
                    <groupId>org.immutant</groupId>
                    <artifactId>${project.artifactId}</artifactId>
                    <file>${project.basedir}/target/${project.artifactId}-${project.version}.jar</file>
                    <pomFile>${project.basedir}/target/pom.xml</pomFile>
                  </configuration>
                </execution>

                <execution>
                  <id>install-ns-artifact-in-distributable-repo</id>
                  <phase>install</phase>
                  <goals>
                    <goal>install-file</goal>
                  </goals>
                  <configuration>
                    <groupId>org.immutant</groupId>
                    <artifactId>${project.artifactId}</artifactId>
                    <file>${project.basedir}/target/${project.artifactId}-${project.version}.jar</file>
                    <pomFile>${project.basedir}/target/pom.xml</pomFile>
                    <localRepositoryPath>${project.parent.basedir}/target/dist-repo/</localRepositoryPath>
                    <createChecksum>true</createChecksum>
                  </configuration>
                </execution>
              </executions>
            </plugin>

          </plugins>
        </pluginManagement>
      </build>
    </profile>
  </profiles>

</project>
