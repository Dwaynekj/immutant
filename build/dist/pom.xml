<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <parent>
    <groupId>org.immutant</groupId>
    <artifactId>immutant-build</artifactId>
    <version>1.0.0</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.immutant</groupId>
  <artifactId>immutant-dist</artifactId>
  <packaging>pom</packaging>
  <name>Immutant Build Distribution</name>
  <description />

  <profiles>
    <profile>
      <id>integ</id>
      <dependencies>
        <dependency>
          <groupId>org.immutant</groupId>
          <artifactId>immutant-integration-tests</artifactId>
          <version>${project.version}</version>
          <type>pom</type>
          <scope>compile</scope>
        </dependency>
      </dependencies>
    </profile>

    <profile>
      <id>slim-dist</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <executions>
              <execution>
                <id>dist-slim</id>
                <phase>package</phase>
                <goals>
                  <goal>single</goal> 
                </goals>
                <configuration>
                  <descriptors>
                    <descriptor>src/main/assembly/dist-slim.xml</descriptor>
                  </descriptors>
                </configuration>
              </execution>
              <execution>
                <id>dist-modules</id>
                <phase>package</phase> 
                <goals>
                  <goal>single</goal>
                </goals>
                <configuration>
                  <descriptors>
                    <descriptor>src/main/assembly/dist-modules.xml</descriptor>
                  </descriptors>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

    <profile>
      <id>full-dist</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <executions>
              <execution>
                <id>dist-full</id>
                <phase>package</phase>
                <goals>
                  <goal>single</goal> 
                </goals>
                <configuration>
                  <descriptors>
                    <descriptor>src/main/assembly/dist-full.xml</descriptor>
                  </descriptors>
                </configuration>
              </execution>
            </executions>
          </plugin>

          <plugin>
            <groupId>de.saumya.mojo</groupId>
            <artifactId>jruby-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>install-json</id>
                <phase>compile</phase>
                <goals>
                  <goal>jruby</goal>
                </goals>
                <configuration>
                  <args>-S gem install json_pure - -no-ri - -no-rdoc</args>
                  <gemHome>./target/rubygems</gemHome>
                  <gemPath>./target/rubygems</gemPath>
                </configuration>
              </execution>
              <execution>
                <id>generate-build-metadata</id>
                <phase>verify</phase>
                <goals>
                  <goal>jruby</goal>
                </goals>
                <configuration>
                  <file>bin/generate_build_metadata.rb</file>
                </configuration>
              </execution>
            </executions>
          </plugin>
          
          <plugin>
            <groupId>com.theoryinpractise</groupId>
            <artifactId>clojure-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>generate-digests</id>
                <phase>verify</phase>
                <goals>
                  <goal>run</goal>
                </goals>
                <configuration>
                  <mainClass>immutant.build.generate_digests</mainClass>
                  <args>target/ .zip .json</args>
                </configuration>
              </execution>
            </executions>
          </plugin>

        </plugins>
      </build>
    </profile>

  </profiles>


  <dependencies>
    <dependency>
      <groupId>org.immutant</groupId>
      <artifactId>immutant-build-assembly</artifactId>
      <version>${project.version}</version>
      <type>pom</type>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.immutant</groupId>
      <artifactId>immutant-build-support</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>



    </plugins>
  </build>

</project>
