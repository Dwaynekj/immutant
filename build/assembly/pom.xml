  <modelVersion>4.0.0</modelVersion>

  <groupId>org.fnbox</groupId>
  <artifactId>fnbox-build-assembly</artifactId>
  <packaging>pom</packaging>
  <name>(fn box) Build Assembly</name>

  <dependencies>
    <dependency>
      <groupId>org.jboss.as</groupId>
      <artifactId>jboss-as-dist</artifactId>
      <version>${version.jbossas}</version>
      <type>zip</type>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.fnbox</groupId>
      <artifactId>fnbox-build-support</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>

  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>com.theoryinpractise</groupId>
        <artifactId>clojure-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>perform-assembly</id>
            <phase>package</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <mainClass>fnbox.build.assembler</mainClass>
              <args>.</args>
            </configuration>
          </execution>
        </executions>
      </plugin>

